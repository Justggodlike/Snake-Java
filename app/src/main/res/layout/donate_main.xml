<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.snake.DonateActivity">

    <ImageView
        android:id="@+id/image_button_donate_ten_dollars"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toTopOf="@+id/image_button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_donate_money" />

    <ImageView
        android:id="@+id/image_button_donate_one_dollar"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/image_button_donate_ten_dollars"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_donate_money" />

    <TextView
        android:id="@+id/textPlsDonate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Hello. Im a student, and thats my first app ever. If you wanna support me, here's all you need:"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_button_back"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_back" />

    <TextView
        android:id="@+id/textDonateOneDollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="93dp"
        android:text="Donate 1$"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textDonateOneDollar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_button_donate_one_dollar" />

    <TextView
        android:id="@+id/textDonateOneDollar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:text="Donate 10$"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/image_button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/image_button_donate_one_dollar" />
</androidx.constraintlayout.widget.ConstraintLayout>