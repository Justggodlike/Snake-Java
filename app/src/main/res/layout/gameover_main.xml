<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameOverLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.snake.GameOverActivity">

    <TextView
        android:id="@+id/finalScoreReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalScoreAnnouncement"
        tools:context=".GameOverActivity" />

    <ImageView
        android:id="@+id/restartButton"
        android:layout_width="174dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalScoreReview"
        app:srcCompat="@drawable/button_restart" />

    <ImageView
        android:id="@+id/gameOverAnnouncement"
        android:layout_width="172dp"
        android:layout_height="83dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/text_game_over" />

    <ImageView
        android:id="@+id/finalScoreAnnouncement"
        android:layout_width="375dp"
        android:layout_height="107dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOverAnnouncement"
        app:srcCompat="@drawable/text_final_score" />

    <ImageView
        android:id="@+id/image_button_donate"
        android:layout_width="85dp"
        android:layout_height="123dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gameOverAnnouncement"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_donate" />
</androidx.constraintlayout.widget.ConstraintLayout>